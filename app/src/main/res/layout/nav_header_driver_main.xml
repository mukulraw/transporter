<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/nav_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/profile_ll_driver"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/user_profile_image_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/ic_profile_image" />

    <TextView
        android:id="@+id/profile_name_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Sumit Mishra"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/profile_phone_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id No. 123456789"
        android:textSize="12sp"
        android:textColor="#CFCFCF"
        android:fontFamily="@font/montserrat_semibold"/>

</LinearLayout>


